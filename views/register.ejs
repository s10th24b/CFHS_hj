<form class="well" onsubmit="return tocheckpw2()" data-ajax="false" method="post" action="/register/first_step">
  <div class="form-group">
    <label for="name">이름</label>
    <input type="text" class="form-control" id="name" name = "name" placeholder="이름을 입력하세요">
    <p id="namel" style="color:red;"></p>
  </div>
  <div class="form-group">
    <label for="phone">전화번호</label>
    <input type="number" class="form-control" id="Pnumber" name = "Pnumber" placeholder="전화번호를 입력하세요">
    <p id="pnl" style="color:red;"></p>
  </div>
  <div class="form-group">
    <label for="id">아이디</label>
    <input type="text" class="form-control" id="U_id" name="U_id" placeholder="아이디를 입력하세요">
    <p id="idl" style="color:red;"></p>
  </div>
  <div class="form-group">
    <label for="pwd1">패스워드</label>
    <input type="password" class="form-control" id="pwd1" name = "pwd" placeholder="패스워드를 입력하세요">
    <p id="pwl" style="color:red;"></p>
  </div>
  <div class="form-group">
    <label for="pwd2">패스워드</label>
    <input type="password" class="form-control" id="pwd2" placeholder="패스워드를 한번 더 입력하세요">
    <p id="pwsame" style="color:red;"></p>
  </div>
  <div class="form-group">
    <label for="user_t">유저 타입</label><br>
    <input type="radio" name = "user_t" value="free">프리랜서<br>
    <input type="radio" name = "user_t" value="client">의뢰인<br>
    <p id="utl" style="color:red;"></p>
  </div>
  <button type="submit" class="btn btn-default">다음</button>
</form>

  <script>
    var db = require('../modules/db');

    function tocheckpw2() {
        var name = document.getElementById("name").value;
        var Pnumber = document.getElementById("Pnumber").value;
        var U_id = document.getElementById("U_id").value;
        var pw = document.getElementById("pwd1").value;
        var pwck = document.getElementById("pwd2").value;
        var u_type = document.getElementsByName("user_t");
        var set_type = null;
 

        if (pw != pwck) {
            document.getElementById('pwsame').innerHTML = '비밀번호가 틀렸습니다. 다시 입력해 주세요';
            return false;
        }
        else {
            document.getElementById('pwsame').innerHTML = '';
        }
        if(name.length == 0){
            document.getElementById('namel').innerHTML = '이름을 입력해주세요';
            return false;
        }
        else{
            document.getElementById('namel').innerHTML = '';
        }
        if(U_id.length == 0){
            document.getElementById('idl').innerHTML = '아이디를 입력해주세요';
            return false;
        }
        else {
            document.getElementById('idl').innerHTML = '';
        }
        if(Pnumber.length == 0){
            document.getElementById('pnl').innerHTML = '전화번호를 입력해주세요.';
            return false;
        }
        else{
            document.getElementById('pnl').innerHTML = '';
        }
        if(pw.length == 0){
            document.getElementById('pwl').innerHTML = '패스워드를 입력해주세요.';
            return false;
        }
        else{
            document.getElementById('pwl').innerHTML = '';
        }
        if(u_type[0].checked == false && u_type[1].checked==false){
            document.getElementById('utl').innerHTML = '유저 타입을 선택해주세요.';
            return false;
        }
        else{
            document.getElementById('utl').innerHTML = '';
        }
    }
  </script>

